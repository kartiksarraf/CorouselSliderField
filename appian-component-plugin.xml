<?xml version="1.0" encoding="UTF-8"?>
<appian-component-plugin name="corouselSliderField" key="com.appcino.corouselSliderField">
	<plugin-info>
		<description>Corousel Slider Field</description>
		<vendor name="Xebia" url="https://xebia.com/" />
		<version>1.2.1</version>
		<support supported="false"/>
	</plugin-info>
	
	<!-- Add a new component with every version you create -->
	<!-- This v1.0.0 component maps to the v1 folder -->
	<component rule-name="corouselSliderField" key="corouselSliderField.component" version="1.0.0">
	    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
		<icon-file>corouselSliderField.svg</icon-file>
		
		<parameter>
			<name>dataList</name>
			<category>input-only</category>
			<type>Dictionary?list</type>
		</parameter>
		
		<parameter>
			<name>imageHeight</name>
			<category>input-only</category>
			<type>Integer</type>
		</parameter>
		
		<parameter>
			<name>sliderOptions</name>
			<category>input-only</category>
			<type>Dictionary</type>
		</parameter>

		<parameter>
			<name>onSelection</name>
			<category>event</category>
			<type>Text</type>
		</parameter>
		
		<html-entry-point>index.html</html-entry-point>

		<sdk-version>2.0.0</sdk-version>
	</component>
	
	<!-- Add a new component with every version you create -->
	<!-- This v1.2.0 component maps to the v1 folder -->
	<component rule-name="corouselImageSliderField" key="corouselImageSliderField.component" version="1.2.1">
	    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
		<icon-file>corouselImageSliderField.svg</icon-file>
		
		<parameter>
			<name>dataList</name>
			<category>input-only</category>
			<type>Dictionary?list</type>
		</parameter>
		
		<parameter>
			<name>slideTime</name>
			<category>input-only</category>
			<type>Integer</type>
		</parameter>
		
		<parameter>
			<name>imageHeight</name>
			<category>input-only</category>
			<type>Integer</type>
		</parameter>
		
		<parameter>
			<name>slidesPerView</name>
			<category>input-only</category>
			<type>Integer</type>
		</parameter>
		
		<parameter>
			<name>wordwrapCount</name>
			<category>input-only</category>
			<type>Integer</type>
		</parameter>
		
		<parameter>
			<name>enableWordwrap</name>
			<category>input-only</category>
			<type>Boolean</type>
		</parameter>
		
		<parameter>
			<name>bannerOptions</name>
			<category>input-only</category>
			<type>Dictionary</type>
		</parameter>
		
		<parameter>
			<name>corouselOptions</name>
			<category>input-only</category>
			<type>Dictionary</type>
		</parameter>

		<parameter>
			<name>onSelection</name>
			<category>event</category>
			<type>Text</type>
		</parameter>
		
		<html-entry-point>index.html</html-entry-point>

		<sdk-version>2.0.0</sdk-version>
	</component>
</appian-component-plugin>
